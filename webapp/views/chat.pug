extends layout.pug

block content
	div.uk-position-bottom-center.uk-position-z-index.uk-margin-top
		form(action="", method="post")
			input(type="hidden" name="_csrf" value=csrfToken)
			//- input(type="text" name="sendTo" readonly)

			div(uk-grid)
				div.uk-width-2-5
					input(type="number" name="sendTo" placeholder="Number to Reply").uk-input.uk-border-pill

				div.uk-width-2-5
					input(type="text" name="content" placeholder="Comment (Up to 255 chars)").uk-input.uk-border-pill

				div.uk-width-1-5
					button(type="submit").uk-button.uk-button-primary.uk-border-pill Send
